@inherits Elsa.OnBoardingProcess.PoC.Components.CustomDynamicComponent<string>

<h3>User On Board</h3>

<div class="form-group">
    <label for="firstName">First Name:</label>
    <input type="text" class="form-control" id="firstName" placeholder="Enter first name" @bind-value="@Value">
</div>

@code {

    protected override void OnParametersSet()
    {
        if (Value == null)
        {
            Value = string.Empty;
        }
    }

}